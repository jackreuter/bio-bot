<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        >

        <TextView
            android:id="@+id/textViewUserID"
            android:layout_marginBottom="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/outer_margin"
            android:layout_marginRight="@dimen/outer_margin"
            android:layout_above="@+id/textViewManholeLocation"
            android:textSize="@dimen/font_size_large"
            android:textColor="@color/text_color"
            />

        <Button
            android:id="@+id/buttonLogout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/outer_margin"
            android:layout_marginBottom="25dp"
            android:padding="@dimen/padding"
            android:text="@string/log_out"
            android:textSize="@dimen/font_size_large"
            android:textColor="@color/white"
            android:onClick="onClickLogout"
            android:layout_alignParentRight="true"
            android:layout_above="@+id/textViewManholeLocation"
            android:background="@drawable/button"
            />

        <TextView
            android:id="@+id/textViewManholeLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/outer_margin"
            android:textSize="@dimen/font_size_large"
            android:textColor="@color/text_color"
            android:text="@string/manhole_location"
            android:layout_above="@+id/editTextManholeLocation"
            />

        <EditText
            android:id="@+id/editTextManholeLocation"
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/outer_margin"
            android:layout_marginRight="@dimen/outer_margin"
            android:layout_marginBottom="@dimen/inner_margin"
            android:padding="@dimen/padding"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:textSize="@dimen/font_size_large"
            android:textColor="@color/text_color"
            android:layout_above="@+id/textViewNotes"
            />

        <TextView
            android:id="@+id/textViewNotes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/outer_margin"
            android:layout_above="@+id/editTextNotes"
            android:textSize="@dimen/font_size_large"
            android:textColor="@color/text_color"
            android:text="@string/notes"
            />

        <EditText
            android:id="@+id/editTextNotes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/outer_margin"
            android:layout_marginRight="@dimen/outer_margin"
            android:padding="@dimen/padding"
            android:textSize="@dimen/font_size_large"
            android:textColor="@color/text_color"
            android:background="@color/white"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            />

        <Button
            android:id="@+id/buttonRead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/editTextNotes"
            android:layout_centerHorizontal="true"
            android:layout_margin="25dp"
            android:padding="@dimen/padding"
            android:onClick="onClickRead"
            android:text="@string/read"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_large"
            android:background="@drawable/button"
            />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>